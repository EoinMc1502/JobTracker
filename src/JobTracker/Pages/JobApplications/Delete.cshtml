@page
@model JobTracker.Pages.JobApplications.DeleteModel
@{
    ViewData["Title"] = "Delete Job Application";
}

<h1>Are you sure you want to delete this application?</h1>

<div class="mb-4">
    <strong>Company:</strong> @Model.JobApplication.CompanyName<br />
    <strong>Position:</strong> @Model.JobApplication.Position<br />
    <strong>Date Applied:</strong> @Model.JobApplication.DateApplied.ToShortDateString()<br />
    <strong>Status:</strong> @Model.JobApplication.Status<br />
    <strong>Notes:</strong> @Model.JobApplication.Notes
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
