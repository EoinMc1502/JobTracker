@page
@model JobTracker.Pages.JobApplications.DetailsModel
@{
    ViewData["Title"] = "Job Application Details";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-4">
    <p><strong>Company:</strong> @Model.JobApplication.CompanyName</p>
    <p><strong>Position:</strong> @Model.JobApplication.Position</p>
    <p><strong>Date Applied:</strong> @Model.JobApplication.DateApplied.ToShortDateString()</p>
    <p><strong>Status:</strong> @Model.JobApplication.Status</p>
    <p><strong>Notes:</strong></p>
    <pre>@Model.JobApplication.Notes</pre>
</div>

<a asp-page="Edit" asp-route-id="@Model.JobApplication.Id" class="btn btn-primary">Edit</a>
<a asp-page="Index" class="btn btn-secondary">Back</a>
